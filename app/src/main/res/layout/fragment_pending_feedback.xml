<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_background"
    android:orientation="vertical"
    tools:context=".Fragments.PendingFeedback">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:orientation="horizontal"
        android:background="@drawable/cursor"
        android:elevation="30dp"
        android:backgroundTint="@color/text_color">

        <ImageView
            android:id="@+id/backbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/backarrow"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/no_backgound"
            android:fontFamily="@font/cinzel_decorative_bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Performate"

android:layout_marginLeft="-30dp"
            android:textColor="@color/light_background"
            android:textSize="35dp" />





    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/cormorant_upright_semibold"
        android:gravity="center_horizontal"
        android:text="Pending Feedbacks"
        android:textAlignment="center"
        android:textColor="@color/text_color"
        android:textSize="50sp"
        android:transitionName="logo_text" />

    <TextView
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/layout_logo"
        android:layout_marginTop="20dp"
        android:background="@drawable/cursor"
        android:backgroundTint="@color/text_color" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/feedbackList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        tools:listitem="@layout/feedback_list_layout" />


</LinearLayout>